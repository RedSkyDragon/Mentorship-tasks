@model IEnumerable<IncomeAndExpenses.Web.Models.ExpenseTypeViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Expense types</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>
@if (Model.Count() > 0)
{
    foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a href=@Url.Action("Edit", new { id = item.Id })><i class="fas fa-pencil-alt"></i></a>&nbsp;&nbsp;
                <a href=@Url.Action("Delete", new { id = item.Id })><i class="fas fa-trash"></i></a>
            </td>
        </tr>
    }
}
else
{
    <tr>
        <td colspan="3" class="text-center">It seems there is nothing here...</td>
    </tr>
}
</table>
